<%- include('header'); -%>

<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
        <% tasks.forEach(function(task){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" name="checkbox" value=<%= task._id %> >
                    <input type="hidden" name="listName" value=<%= listTitle %> >
                    <p> <%= task.name %> </p>
                </div>
            </form>
        <% }) %>
        <form action="/" method="post" class="item">
            <input type="text" name="task" id="myTask" placeholder="New Item" autocomplete="off">
            <button type="submit" value=<%= listTitle %> name="list">+</button>
        </form>
    </div>

<%- include('footer'); -%>